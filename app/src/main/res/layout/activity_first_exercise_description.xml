<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first_exercise_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstExerciseDescriptionActivity">

    <ImageButton
        android:id="@+id/imageButton_back_exerc1"
        android:layout_width="90dp"
        android:layout_height="79dp"
        android:layout_marginStart="64dp"
        android:backgroundTint="#00FFFFFF"
        android:clickable="true"
        android:contentDescription="@string/imagebutton_des_back"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/conf_first_exercise_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/conf_first_exercise_button"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/textViewFirstExerciseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="52dp"
        android:text="@string/first_exercise"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/imageButton_back_exerc1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="1045dp"
        android:layout_height="418dp"
        android:layout_marginTop="32dp"
        android:autofillHints=""
        android:contentDescription="@string/first_exercise_description"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/first_exercise_description"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/button_play_ex1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFirstExerciseDescription" />

    <ImageButton
        android:id="@+id/button_play_ex1"
        android:layout_width="147dp"
        android:layout_height="151dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#00FFFFFF"
        android:clickable="true"
        android:contentDescription="@string/button_play"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_play"
        app:tint="#003001"
        android:focusable="true" />

    <ImageButton
        android:id="@+id/conf_first_exercise_button"
        android:layout_width="112dp"
        android:layout_height="105dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="#00FFFFFF"
        android:clickable="true"
        android:contentDescription="@string/imagebutton_des_settings"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFirstExerciseDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewFirstExerciseDescription"
        app:srcCompat="@android:drawable/ic_menu_manage"
        app:tint="#000000"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
