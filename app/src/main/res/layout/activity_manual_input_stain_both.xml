<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualInputStainBothActivity">


    <ImageButton
        android:id="@+id/imageButton_back_map_test"
        android:layout_width="72dp"
        android:layout_height="65dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/imagebutton_des_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <ImageView
        android:id="@+id/circleGrid"
        android:layout_width="545dp"
        android:layout_height="545dp"
        android:contentDescription="@string/circular_grid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tencmgrid" />

    <ImageView
        android:id="@+id/dotsPainting"
        android:layout_width="545dp"
        android:layout_height="545dp"
        android:contentDescription="@string/circular_grid"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/house_icon" />

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/next_test"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_media_ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#000000" />

    <ImageButton
        android:id="@+id/repeatButton"
        android:layout_width="118dp"
        android:layout_height="102dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/repeat_test"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/stat_notify_sync"
        app:tint="#429A37" />

    <TextView
        android:id="@+id/manualTittleBoth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/manual_stain_both"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/imageButton_back_map_test"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ManualLeftInstructions"
        android:layout_width="280dp"
        android:layout_height="198dp"
        android:text="@string/explain_manual"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/repeatButton"
        app:layout_constraintEnd_toStartOf="@+id/circleGrid"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_back_map_test" />

</androidx.constraintlayout.widget.ConstraintLayout>