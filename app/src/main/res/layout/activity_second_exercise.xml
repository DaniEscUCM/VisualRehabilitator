<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondExerciseActivity">

    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="99dp"
        android:layout_height="91dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/button_home"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/guideline1"
        app:srcCompat="@drawable/house_icon"
        app:tint="#5C5757" />

    <ImageButton
        android:id="@+id/exercise_settings"
        android:layout_width="99dp"
        android:layout_height="91dp"
        android:backgroundTint="@color/grey"
        android:contentDescription="@string/imagebutton_des_settings"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:srcCompat="@android:drawable/ic_menu_manage"
        app:tint="@color/black"/>

    <ImageButton
        android:id="@+id/dot_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/grey"
        android:contentDescription="@string/button_for_click"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_black" />

    <ImageView
        android:id="@+id/foco"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:contentDescription="@string/foco"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/dot_button"
        app:layout_constraintEnd_toEndOf="@+id/dot_button"
        app:layout_constraintStart_toStartOf="@+id/dot_button"
        app:layout_constraintTop_toTopOf="@+id/dot_button"
        app:srcCompat="@drawable/circle_black"
        app:tint="@color/red" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10 " />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15 " />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90 " />

</androidx.constraintlayout.widget.ConstraintLayout>