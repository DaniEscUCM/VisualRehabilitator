<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExercisesActivity">

    <ImageButton
        android:id="@+id/imageButton_back_exerc_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/imagebutton_des_back"
        android:scaleType="fitCenter"
        app:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintEnd_toStartOf="@id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/textview_exercises"
        android:textAlignment="viewStart"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/imageButton_back_exerc_menu"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView_Exercises"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border_for_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_exercise1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contentDescription="@string/first_exercise"
                android:focusable="true"
                android:text="@string/first_exercise"
                android:textAlignment="viewStart"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button_exercise2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35sp"
                app:backgroundTint="@color/pink_dark"
                android:clickable="true"
                android:contentDescription="@string/second_exercise"
                android:focusable="true"
                android:text="@string/second_exercise"
                android:textAlignment="viewStart"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button_exercise3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
