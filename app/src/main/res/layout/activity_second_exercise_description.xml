<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/second_exercise_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".SecondExerciseDescriptionActivity">

    <ImageButton
        android:id="@+id/imageButton_back_exerc2"
        android:layout_width="100dp"
        android:layout_height="101dp"
        android:layout_marginStart="64dp"
        android:backgroundTint="#00FFFFFF"
        android:clickable="true"
        android:contentDescription="@string/imagebutton_des_back"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/conf_second_exercise_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/conf_second_exercise_button"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/textViewSecondExerciseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="52dp"
        android:text="@string/second_exercise"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/imageButton_back_exerc2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_play_ex2"
        android:layout_width="147dp"
        android:layout_height="151dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#00FFFFFF"
        android:clickable="true"
        android:contentDescription="@string/button_play"
        android:focusable="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_play"
        app:tint="@color/black" />

    <ImageButton
        android:id="@+id/conf_second_exercise_button"
        android:layout_width="112dp"
        android:layout_height="105dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="#00FFFFFF"
        android:clickable="true"
        android:contentDescription="@string/imagebutton_des_settings"
        android:focusable="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSecondExerciseDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewSecondExerciseDescription"
        app:srcCompat="@android:drawable/ic_menu_manage"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/textViewExercise2"
        android:layout_width="887dp"
        android:layout_height="332dp"
        android:layout_marginTop="124dp"
        android:gravity="center"
        android:text="@string/second_exercise_description"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSecondExerciseDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
