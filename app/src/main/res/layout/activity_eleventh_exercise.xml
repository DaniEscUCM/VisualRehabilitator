<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EleventhExerciseActivity">


    <ImageButton
        android:id="@+id/pause_button"
        android:layout_width="61dp"
        android:layout_height="81dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/pause_button"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline37"
        app:layout_constraintEnd_toStartOf="@+id/guideline38"
        app:srcCompat="@drawable/pausa" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15125" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.12109375" />

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:contentDescription="@string/image_background"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline37"
        app:srcCompat="@drawable/woman_image" />

    <ImageButton
        android:id="@+id/dot_button_nose"
        android:layout_width="67dp"
        android:layout_height="51dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="220dp"
        android:alpha="0.01"
        android:backgroundTint="@color/grey"
        android:contentDescription="@string/button_for_click"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/image_background"
        app:layout_constraintTop_toTopOf="@+id/image_background"
        app:srcCompat="@drawable/circle_line" />

    <ImageView
        android:id="@+id/focus_nose"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:contentDescription="@string/foco"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/dot_button_nose"
        app:layout_constraintEnd_toEndOf="@+id/dot_button_nose"
        app:layout_constraintStart_toStartOf="@+id/dot_button_nose"
        app:layout_constraintTop_toTopOf="@+id/dot_button_nose"
        app:srcCompat="@drawable/circle_black"
        app:tint="@color/red" />

    <ImageButton
        android:id="@+id/dot_button_left_eye"
        android:layout_width="68dp"
        android:layout_height="64dp"
        android:alpha="0.01"
        android:backgroundTint="@color/grey"
        android:contentDescription="@string/button_for_click"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/image_background"
        app:layout_constraintEnd_toEndOf="@+id/image_background"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toStartOf="@+id/image_background"
        app:layout_constraintTop_toTopOf="@+id/image_background"
        app:layout_constraintVertical_bias="0.477"
        app:srcCompat="@drawable/circle_line" />

    <ImageView
        android:id="@+id/focus_left_eye"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:contentDescription="@string/foco"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/dot_button_left_eye"
        app:layout_constraintEnd_toEndOf="@+id/dot_button_left_eye"
        app:layout_constraintStart_toStartOf="@+id/dot_button_left_eye"
        app:layout_constraintTop_toTopOf="@+id/dot_button_left_eye"
        app:srcCompat="@drawable/circle_black"
        app:tint="@color/red" />

    <ImageButton
        android:id="@+id/dot_button_right_eye"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:alpha="0.01"
        android:backgroundTint="@color/grey"
        android:contentDescription="@string/button_for_click"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/image_background"
        app:layout_constraintEnd_toEndOf="@+id/image_background"
        app:layout_constraintHorizontal_bias="0.639"
        app:layout_constraintStart_toStartOf="@+id/image_background"
        app:layout_constraintTop_toTopOf="@+id/image_background"
        app:layout_constraintVertical_bias="0.474"
        app:srcCompat="@drawable/circle_line" />

    <ImageView
        android:id="@+id/focus_right_eye"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:contentDescription="@string/foco"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/dot_button_right_eye"
        app:layout_constraintEnd_toEndOf="@+id/dot_button_right_eye"
        app:layout_constraintStart_toStartOf="@+id/dot_button_right_eye"
        app:layout_constraintTop_toTopOf="@+id/dot_button_right_eye"
        app:srcCompat="@drawable/circle_black"
        app:tint="@color/red" />

    <ImageButton
        android:id="@+id/dot_button_mouth"
        android:layout_width="119dp"
        android:layout_height="36dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="280dp"
        android:alpha="0.01"
        android:backgroundTint="@color/grey"
        android:contentDescription="@string/button_for_click"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/image_background"
        app:layout_constraintTop_toTopOf="@+id/image_background"
        app:srcCompat="@drawable/border_rectangle_for_layout" />

    <ImageView
        android:id="@+id/focus_mouth"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:contentDescription="@string/foco"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/dot_button_mouth"
        app:layout_constraintEnd_toEndOf="@+id/dot_button_mouth"
        app:layout_constraintStart_toStartOf="@+id/dot_button_mouth"
        app:layout_constraintTop_toTopOf="@+id/dot_button_mouth"
        app:srcCompat="@drawable/circle_black"
        app:tint="@color/red" />

    <TextView
        android:id="@+id/text_findX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/eleventh_exercise_find_nose"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.783" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2A2D35"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/guideline33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="117dp"
            android:layout_height="107dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/button_home"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline34"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/house_icon"
            app:tint="#D3D1D1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />

        <Switch
            android:id="@+id/focus_switch1"
            android:layout_width="394dp"
            android:layout_height="73dp"
            android:text="@string/focus_switch"
            android:textColor="#D3D1D1"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline35"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.501" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pause_button"
            android:textColor="#D3D1D1"
            android:textSize="60sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline36"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/return_button"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/continue_exercise"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline36"
            app:srcCompat="@android:drawable/ic_media_play"
            app:tint="#D3D1D1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.53" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>