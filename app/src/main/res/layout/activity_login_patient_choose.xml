<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_login_patient"
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:layout_marginStart="99dp"
        android:layout_marginBottom="184dp"
        android:text="@string/button_login_patient"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_login_patient2"
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="184dp"
        android:text="@string/button_signup_patient"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_patient_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="131dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="130dp"
        android:text="@string/text_patient_account"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_ask_patient_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="31dp"
        android:text="@string/text_ask_patient_login"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/button_login_patient"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ask_patient_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="35dp"
        android:text="@string/text_ask_patient_signup"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/button_login_patient2"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>